{
  "tasks": {
    "dev": "DENO_ENV=development deno run --watch --allow-env --allow-net --allow-read --allow-sys src/main.ts",
    "start": "DENO_ENV=production deno run --allow-env --allow-net --allow-read --allow-sys src/main.ts"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false
  },
  "imports": {
    "@std/uuid": "jsr:@std/uuid@^1.0.3",
    "date-fns": "npm:date-fns@^3.6.0",
    "date-fns-tz": "npm:date-fns-tz@^3.1.3",
    "mongoose": "npm:mongoose@^6.13"
  }
}
